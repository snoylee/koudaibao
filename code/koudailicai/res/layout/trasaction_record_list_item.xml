<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/global_white_color"
    android:layout_gravity="center_horizontal"
	     >
	    <LinearLayout 
	    android:id="@+id/linearLone"  
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="20dp"
	    android:layout_marginTop="12dp"
	    android:gravity="center_vertical"
	    android:orientation="vertical">
	    <TextView 
	        android:id="@+id/project_name" 
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:textSize="16sp"
	    	android:textColor="#333333"
	    	android:text="口袋宝">
	    </TextView>
	    <LinearLayout 
	        android:id="@+id/linteo"
	        android:layout_marginTop="8dp" 
          	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_marginBottom="8dp"
	    	android:orientation="horizontal">
	    	 <TextView 
	      	android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		   	android:textSize="14sp"
		   	android:textColor="#999999"
	    	android:text="起息日：">
	    </TextView>
	    	 <TextView 
	    	    android:id="@+id/interest_start_date"
	            android:layout_width="wrap_content"
	   		 	android:layout_height="wrap_content"
   		 		android:textSize="14sp"
	   			android:textColor="#999999"
	    		android:text="2014-10-20">
	    </TextView>
	    </LinearLayout>
	    </LinearLayout>

	    <LinearLayout
	        android:id="@+id/linearLoneTwo"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignTop="@+id/linearLone"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="24dp"
	        android:gravity="center_horizontal"
	        android:orientation="vertical" >

	        <TextView
	            android:id="@+id/investMoney"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="年华"
	            android:textColor="#333333"
	            android:textSize="16sp" />

	        <TextView
	            android:id="@+id/statusLabel"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="8dp"
	            android:gravity="center"
	            android:text="转出"
	            android:textColor="#999999"
	            android:textSize="14sp" />
	    </LinearLayout>

</RelativeLayout>

