<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:background="#ffffff">

        <RelativeLayout
            android:id="@+id/rl_payment_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp" >

            <TextView
                android:id="@+id/tv_payment_details_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="提现"
                android:textColor="@color/global_black_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_payment_details_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignLeft="@id/tv_payment_details_title"
                android:layout_below="@id/tv_payment_details_title"
                android:layout_marginTop="2dp"
                android:text="2014-9-23 21:34"
                android:textColor="@color/global_label_color"
                android:textSize="12sp" />
        </RelativeLayout>
        <RelativeLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            >
            
           <TextView
            android:id="@+id/tv_payment_details_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          	android:layout_marginRight="4dp"
            android:layout_centerVertical="true"
            android:text="-"
            android:textColor="@color/transparent"
            android:textSize="18sp" />
         <TextView
            android:id="@+id/tv_payment_details_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_payment_details_mark"
            android:text="400"
            android:textColor="#666666"
            android:textSize="18sp" /> 
        </RelativeLayout>
        
    </RelativeLayout>
	<View
	    android:id="@+id/view_line"
	    android:layout_width="wrap_content"
	    android:layout_height="@dimen/divide_line_height"
	    android:layout_alignParentBottom="true"
	    android:background="@color/global_line_color" />
</RelativeLayout>