<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
	<RelativeLayout
	    android:id="@+id/Rel_list_one"
        android:layout_marginLeft="12dp"
	    android:layout_marginRight="22dp"
	    android:background="#f2f2f2"
	    android:layout_marginTop="16dp"
	    android:layout_width="match_parent"
	    android:layout_height="80dp"
	    android:gravity="center_horizontal"
	     >
	    <LinearLayout 
	    android:id="@+id/linearLone"  
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="20dp"
	    android:layout_marginTop="18dp"
	    android:orientation="vertical">
	    <TextView 
	        android:id="@+id/project_name" 
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:textSize="16sp"
	    	android:textColor="#333333"
	    	android:text="信托理财一号">
	    </TextView>
	    <LinearLayout 
	        android:layout_marginTop="6dp" 
          	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal">
	    	 <TextView 
	      	android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		   	android:textSize="14sp"
		   	android:textColor="#999999"
	    	android:text="起息日：">
	    </TextView>
	    	 <TextView 
	    	    android:id="@+id/interest_start_date"
	            android:layout_width="wrap_content"
	   		 	android:layout_height="wrap_content"
   		 		android:textSize="14sp"
	   			android:textColor="#999999"
	    		android:text="2014-10-20">
	    </TextView>
	    </LinearLayout>
	    </LinearLayout>
	    
	    <LinearLayout
	        android:id="@+id/linearLoneTwo"  
		    android:layout_alignParentRight="true"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
	        android:layout_marginRight="8dp"
   		    android:gravity="center_horizontal"
   		    android:layout_alignBottom="@id/linearLone"
		    android:orientation="vertical">
	
	    <LinearLayout  
          	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_gravity="right"
	    	android:orientation="horizontal">

	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="年华"
	            android:textColor="#333333"
	            android:textSize="14sp" />

	    	 <TextView 
    	     	android:id="@+id/project_apr_percent"
	          	android:layout_width="wrap_content"
	   		 	android:layout_height="wrap_content"
	   		 	android:textSize="21sp"
	   		 	android:textColor="#ff0000"
	    		android:text="8.0%">
	    </TextView>
	    </LinearLayout>
	        <TextView 
	        android:id="@+id/statusLabel_out"
	        android:gravity="center"
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_gravity="right"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="4dp"
    	 	android:background="@drawable/btn_red_background"
	    	android:textSize="14sp"
	    	android:text="转出"
	    	android:textColor="@android:color/white">
	    </TextView>
	    </LinearLayout>
	</RelativeLayout>
	
	   <RelativeLayout
	       android:layout_below="@id/Rel_list_one"
	       android:id="@+id/lin_list_one"
	       android:layout_width="match_parent"
    	   android:layout_height="wrap_content"
    	   android:layout_marginLeft="20dp"
    	   android:layout_marginRight="32dp"
    	   android:layout_marginTop="10dp"
    	   android:gravity="fill_horizontal">
	       <TextView 
     	 	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:textSize="14sp"
	    	android:textColor="#333333"
    	 	android:layout_marginLeft="8dp"
	    	android:text="投资金额：">
	    </TextView>
	    	 <TextView 
	    	 android:id="@+id/incvert_mount_duein_capital"    
   	     	android:layout_alignParentRight="true"
          	android:layout_width="wrap_content"
   		 	android:layout_height="wrap_content"
   		 	android:textSize="14sp"
   		 	android:textColor="#000000"
    		android:text="100.00元">
	    </TextView>
	       
	   </RelativeLayout>
	   <RelativeLayout
	       android:layout_below="@id/lin_list_one"
	       android:id="@+id/lin_list_two"
	       android:layout_width="match_parent"
    	   android:layout_height="wrap_content"
    	   android:layout_marginLeft="20dp"
    	   android:layout_marginRight="32dp"
    	   android:layout_marginTop="4dp"
    	   android:gravity="fill_horizontal">
	       <TextView 
     	 	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:textSize="14sp"
	    	android:textColor="#333333"
    	 	android:layout_marginLeft="8dp"
	    	android:text="未结算收益：">
	    </TextView>
	    	 <TextView 
	    	android:id="@+id/on_income_duein_profits"
   	     	android:layout_alignParentRight="true"
          	android:layout_width="wrap_content"
   		 	android:layout_height="wrap_content"
   		 	android:textSize="14sp"
   		 	android:textColor="#000000"
    		android:text="0.12元">
	    </TextView>
	       
	   </RelativeLayout>
	   <RelativeLayout
	       android:layout_below="@id/lin_list_two"
	       android:id="@+id/lin_list_three"
	       android:layout_width="match_parent"
    	   android:layout_height="wrap_content"
    	   android:layout_marginLeft="20dp"
    	   android:layout_marginRight="32dp"
    	   android:layout_marginTop="4dp"
    	   android:gravity="fill_horizontal">
	       <TextView 
     	 	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:textSize="14sp"
	    	android:textColor="#333333"
    	 	android:layout_marginLeft="8dp"
	    	android:text="代收本金：">
	    </TextView>
	    	 <TextView 
	    	android:id="@+id/is_transfe_money"
   	     	android:layout_alignParentRight="true"
          	android:layout_width="wrap_content"
   		 	android:layout_height="wrap_content"
   		 	android:textSize="14sp"
   		 	android:textColor="#000000"
    		android:text="100.00">
	    </TextView>
	       
	   </RelativeLayout>
	   <RelativeLayout
	       android:layout_below="@id/lin_list_three"
	       android:id="@+id/lin_list_four"
	       android:layout_width="match_parent"
    	   android:layout_height="wrap_content"
    	   android:layout_marginLeft="20dp"
    	   android:layout_marginRight="32dp"
    	   android:layout_marginTop="4dp"
    	   android:gravity="fill_horizontal">
	       <TextView 
     	 	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:textSize="14sp"
	    	android:textColor="#333333"
    	 	android:layout_marginLeft="8dp"
	    	android:text="最近还款日：">
	    	</TextView>
	    	 <TextView 
	    	android:id="@+id/last_repay_ment_date"
   	     	android:layout_alignParentRight="true"
          	android:layout_width="wrap_content"
   		 	android:layout_height="wrap_content"
   		 	android:textSize="14sp"
   		 	android:textColor="#000000"
    		android:text="2014-10-22">
	    </TextView>
	   </RelativeLayout>
	 <View 
	       	android:layout_below="@id/lin_list_four"
	       	android:layout_width="match_parent"
   		 	android:layout_height="8dp" 
	       />
</RelativeLayout>
