<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ParentView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
  <com.kdkj.koudailicai.lib.ui.TitleView
     android:id="@+id/title"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     /> 
	<EditText
	      android:id="@+id/et_new_pwd"
	      android:layout_height="50dp"
	      android:layout_width="fill_parent"
	      android:layout_centerHorizontal="true"
	      android:layout_marginLeft="20dp"
	      android:layout_marginRight="20dp"
	   	  android:layout_marginTop="20dp" 
	   	  android:layout_below="@id/title"
	      android:maxLength="16"
	      android:digits="@string/edittext_box"
	      android:singleLine="true" 
	      android:paddingLeft="10dp"
	      android:hint="@string/pwd_new"
	      android:gravity="center_vertical|left"
	      android:background="@drawable/bg_edittext"        
	      android:textColor="@color/global_black_color"
	      android:textSize="@dimen/register_number" />
		
	<EditText
	      android:id="@+id/et_new_pwd_again"
	      android:layout_height="50dp"
	      android:layout_width="fill_parent"
	      android:layout_centerHorizontal="true"
	      android:layout_marginLeft="20dp"
	      android:layout_marginRight="20dp"
	      android:layout_marginTop="10dp" 
	      android:layout_below="@id/et_new_pwd"
	      android:maxLength="16"
	      android:digits="@string/edittext_box"
	      android:singleLine="true" 
	      android:paddingLeft="10dp"
	      android:hint="@string/pwd_confirm"
	      android:gravity="center_vertical|left"
	      android:background="@drawable/bg_edittext"        
	      android:textColor="@color/global_black_color"
	      android:textSize="@dimen/register_number" />
		
	  <TextView
	      android:id="@+id/et_prompt"
	      android:layout_height="wrap_content"
	      android:layout_width="wrap_content"
	      android:layout_centerHorizontal="true"
	      android:layout_marginLeft="20dp"
	      android:layout_marginRight="20dp"
	      android:layout_marginTop="10dp" 
	      android:layout_below="@id/et_new_pwd_again"
	      android:maxLength="16"
	      android:gravity="center_vertical|left"
	      android:text="@string/prompt"
	      android:textColor="@color/global_black_color"
	      android:textSize="@dimen/register_number" />

		<TextView
	        android:id="@+id/tv_complete"
	        android:layout_height="50dp"
	        android:layout_width="fill_parent"
	        android:layout_centerVertical="true"
	        android:layout_centerHorizontal="true"
	        android:layout_below="@id/et_prompt"
	    	android:layout_marginLeft="20dp"
	    	android:layout_marginRight="20dp"
	    	android:layout_marginTop="10dp"
	        android:gravity="center"
	        android:background="@drawable/btn_grey_background"        
	        android:text="@string/complete"
	        android:textColor="@color/global_white_color"
	        android:textSize="@dimen/global_btn_text_size" />

</RelativeLayout>