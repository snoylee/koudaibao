<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/rl_earnings"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center_vertical"
        android:background="#ffffff" >

        <TextView
            android:id="@+id/tv_earnings_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="昨日收益（元）"
            android:textColor="#000000"
            android:textSize="20sp" />

        <com.kdkj.koudailicai.lib.ui.NumChangeTextView
            android:id="@+id/tv_earnings_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_earnings_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="0.00"
            android:includeFontPadding="false"
            android:textColor="@color/reminder_color"
            android:textSize="56sp" />
    </RelativeLayout>
     <View
	    android:id="@+id/view_line"
	    android:layout_below="@id/rl_earnings"
	    android:layout_width="wrap_content"
	    android:layout_height="@dimen/divide_line_height"
	    android:background="@color/global_line_color" />
</RelativeLayout>