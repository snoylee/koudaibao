<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2" >

    <com.kdkj.koudailicai.lib.ui.TitleView
       android:id="@+id/title"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       />
	<RelativeLayout 
	    android:id="@+id/rl_success"
	    android:layout_width="fill_parent"
	    android:layout_height="120dp"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="20dp"
	    android:layout_marginLeft="15dp"
	    android:layout_marginRight="15dp"
	    android:background="@drawable/shapestroke5"
	    android:layout_below="@id/title"
	    >
	    <ImageView
	        android:id="@+id/view" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_alignParentLeft="true"
	        android:layout_marginLeft="20dp"
	        android:background="@drawable/success"
	        />
    

        <RelativeLayout
            android:id="@+id/rl_success_number"
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/view"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/tv_success_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="提现金额"
                android:textColor="#999999"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_success_money_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/tv_success_money"
                android:text="20000元"
                android:textColor="#333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_success_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_success_money"
                android:text="提现时间"
                android:textColor="#999999"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_success_time_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_success_money_number"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/tv_success_time"
                android:text="2014-12-03 20:23"
                android:textColor="#333333"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tv_success_poundage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_success_time"
                android:text="    手续费"
                android:textColor="#999999"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_success_poundage_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_success_time_number"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/tv_success_poundage"
                android:text="0元"
                android:textColor="#333333"
                android:textSize="14sp" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_success_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_success"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:text="相关说明"
        android:textColor="#333333"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_success_about_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_success_about"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:text="您的一笔20000元提现申请已发出，我们将最T+1个工作日内完成打款（遇节假日顺延）请注意查收。"
        android:textColor="#666666"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/rl_success_return"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_success_about_prompt"
        android:layout_marginLeft="@dimen/invest_margin_left"
        android:layout_marginRight="@dimen/invest_margin_left"
        android:layout_marginTop="25dp" >

        <TextView
            android:id="@+id/tv_success_return"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_red_background"
            android:gravity="center"
            android:text="返回"
            android:textColor="@color/global_white_color"
            android:textSize="@dimen/invest_global_text_size" />
    </RelativeLayout>

</RelativeLayout>