<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:android_custom="http://schemas.android.com/apk/res/com.kdkj.koudailicai"
     xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/global_white_color" >

    <RelativeLayout
        android:id="@+id/trustlist"
        android:background="@color/global_white_color"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:layout_centerVertical="true" >

        <com.kdkj.koudailicai.adapter.RoundProgressBar
            android:id="@+id/roundProgressBar1"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp" 
            android_custom:roundWidth="3dip"
            android_custom:roundColor="#D1D1D1"/>

        <RelativeLayout
            android:id="@+id/trustcontentView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/roundProgressBar1" >

            <TextView
                android:id="@+id/trustP_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="口袋宝"
                android:textColor="#333333"
                android:textSize="@dimen/product_P_Name" />

            <RelativeLayout
                android:id="@+id/trustaprView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/trustP_Name"
                android:layout_below="@id/trustP_Name"
                android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/trustaprLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="预期年化"
                    android:textColor="#999999"
                    android:textSize="@dimen/product_P_aprLabel" />

                <TextView
                    android:id="@+id/trustY_Hua"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/trustaprLabel"
                    android:text="8.00%"
                    android:textColor="#fd5353"
                    android:textSize="@dimen/product_Y_Hua" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/trustP_Name"
                android:layout_below="@id/trustaprView"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/trustpeople"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2000人"
                    android:textColor="#333333"
                    android:textSize="@dimen/product_people" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已投"
                    android:textColor="#999999"
                    android:textSize="@dimen/product_yitou" />

                <ImageView
                    android:id="@+id/trustdivider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/divider" />

                <TextView
                    android:id="@+id/trustY_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="@dimen/product_Y_day" />

                <TextView
                    android:id="@+id/trustqixian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="期限"
                    android:textColor="#999999"
                    android:textSize="@dimen/product_qixian" />

                <ImageView
                    android:id="@+id/trustdivider1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/divider" />

                <TextView
                    android:id="@+id/trustQ_buy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="@dimen/product_Q_buy" />

                <TextView
                    android:id="@+id/trustqigou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="起购"
                    android:textColor="#999999"
                    android:textSize="@dimen/product_qigou" />
            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/strustjiaobiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/jiaobiao" />

        <TextView
            android:id="@+id/trustx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:padding="5dp"
            android:text="新"
            android:textColor="#ffffff"
            android:textSize="@dimen/product_x" />
    </RelativeLayout>

</RelativeLayout>