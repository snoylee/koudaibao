<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/global_blue_color" >

    <ImageView
        android:id="@+id/guidetwo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/trustme" />
    


    <TextView 
        android:id="@+id/twoword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/global_white_color"
        android:text="1000万保证金，本息垫付让您无后顾之忧"
        android:textSize="16sp"/>
    
	<TextView
        android:id="@+id/twoname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/twoword"
        android:layout_centerHorizontal="true"
		android:layout_marginBottom="5dp"
        android:text="信任我"
        android:textColor="@color/global_white_color"
        android:textSize="32sp" />
        
</RelativeLayout>