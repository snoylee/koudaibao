<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical" >
  <com.kdkj.koudailicai.lib.ui.TitleView
      android:id="@+id/title"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/income_title"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#f2f2f2"
            android:gravity="center"
            android:textSize="16sp"
            android:text="收入明细"
            android:textColor="#000000" />
        <TextView 
            android:id="@+id/spending_title"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#f2f2f2"
            android:gravity="center"
            android:textSize="16sp"
            android:text="支出明细"
            android:textColor="#000000"/>
    </LinearLayout>
	
    <ImageView 
        android:id="@+id/payment_cursor"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scaleType="matrix"
        android:src="@drawable/redbar"
        android:background="#f2f2f2"/>
	<View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/divide_line_height"
        android:background="@color/selfcenter_divide_line_color" />

  <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        />    
        
</LinearLayout>
