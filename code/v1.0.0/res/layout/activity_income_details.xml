<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/global_back_black_color" >

    <com.kdkj.koudailicai.lib.ui.TitleView
        android:id="@+id/profittitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <com.kdkj.koudailicai.lib.ui.pulltorefresh.PullToRefreshScrollView
        android:id="@+id/profit_detail_scrillview"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/profittitle"
        android:background="@color/global_back_black_color"
        android:orientation="vertical" >
        <RelativeLayout
            android:id="@+id/rl_root"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" >

            <RelativeLayout
                android:id="@+id/rl_income"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:background="@drawable/shapestroke6" >

                <TextView
                    android:id="@+id/product_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    
                    android:text="产品名称"
                    android:textColor="@color/global_label_color"
                    android:textSize="@dimen/global_text_size" />

                <TextView
                    android:id="@+id/product_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"
                    
                    android:text="信托1号"
                    android:textColor="@color/global_black_color"
                    android:textSize="@dimen/global_text_size" />

                <TextView
                    android:id="@+id/principal_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/product_title"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="投资本金"
                    android:textColor="@color/global_label_color"
                    android:textSize="@dimen/global_text_size" />

                <TextView
                    android:id="@+id/principal_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/product_number"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="10dp"
                    android:text="100"
                    android:textColor="@color/global_black_color"
                    android:textSize="@dimen/global_text_size" />

                <TextView
                    android:id="@+id/yields_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/principal_title"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="年化收益率"
                    android:textColor="@color/global_label_color"
                    android:textSize="@dimen/global_text_size" />

                <TextView
                    android:id="@+id/yields_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/principal_number"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="10dp"
                    android:text="12%"
                    android:textColor="@color/global_black_color"
                    android:textSize="@dimen/global_text_size" />

                <TextView
                    android:id="@+id/totle_yields_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/yields_title"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="总收益"
                    android:textColor="@color/global_label_color"
                    android:textSize="@dimen/global_text_size" />

                <TextView
                    android:id="@+id/totle_yields_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/yields_number"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="10dp"
                    android:text="2.21"
                    android:textColor="@color/global_black_color"
                    android:textSize="@dimen/global_text_size" />

                <TextView
                    android:id="@+id/limit_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/totle_yields_title"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="项目期限"
                    android:textColor="@color/global_label_color"
                    android:textSize="@dimen/global_text_size" />

                <TextView
                    android:id="@+id/limit_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/totle_yields_number"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="10dp"
                    android:text="3（月）"
                    android:textColor="@color/global_black_color"
                    android:textSize="@dimen/global_text_size" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_below="@id/rl_income"
                android:background="@drawable/shapestroke6" >

                <TextView
                    android:id="@+id/buy_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="购买时间"
                    android:textColor="@color/global_label_color"
                    android:textSize="@dimen/global_text_size" />

                <TextView
                    android:id="@+id/buy_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"
                    android:text="2014-1-23"
                    android:textColor="@color/global_black_color"
                    android:textSize="@dimen/global_text_size" />

                <TextView
                    android:id="@+id/rates_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/buy_title"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="起息时间"
                    android:textColor="@color/global_label_color"
                    android:textSize="@dimen/global_text_size" />

                <TextView
                    android:id="@+id/rates_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/buy_number"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="10dp"
                    android:text="2014-1-23"
                    android:textColor="@color/global_black_color"
                    android:textSize="@dimen/global_text_size" />

                <TextView
                    android:id="@+id/reimbursement_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rates_title"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="还款时间"
                    android:textColor="@color/global_label_color"
                    android:textSize="@dimen/global_text_size" />

                <TextView
                    android:id="@+id/reimbursement_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rates_number"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="10dp"
                    android:text="2014-1-23"
                    android:textColor="@color/global_black_color"
                    android:textSize="@dimen/global_text_size" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_day"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_time"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:background="@drawable/shapestroke6" >

                <TextView
                    android:id="@+id/buy_day_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    
                    android:text="起息日"
                    android:textColor="@color/global_label_color"
                    android:textSize="@dimen/global_text_size" />

                <TextView
                    android:id="@+id/buy_day_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"
                   
                    android:text="招募成功次日开始计息"
                    android:textColor="@color/global_black_color"
                    android:textSize="@dimen/global_text_size" />

                <TextView
                    android:id="@+id/rates_day_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/buy_day_title"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="还款日"
                    android:textColor="@color/global_label_color"
                    android:textSize="@dimen/global_text_size" />

                <TextView
                    android:id="@+id/rates_day_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/buy_day_number"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="10dp"
                    android:text="到期后两个工作日内处理"
                    android:textColor="@color/global_black_color"
                    android:textSize="@dimen/global_text_size" />

                <TextView
                    android:id="@+id/reimbursement_day_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rates_day_title"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="计算公式"
                    android:textColor="@color/global_label_color"
                    android:textSize="@dimen/global_text_size" />

                <TextView
                    android:id="@+id/reimbursement_day_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rates_day_number"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="10dp"
                    android:text="年化利率x投资金额x持有天数/365"
                    android:textColor="@color/global_black_color"
                    android:textSize="@dimen/global_text_size" />
            </RelativeLayout>
	    </RelativeLayout>
    </com.kdkj.koudailicai.lib.ui.pulltorefresh.PullToRefreshScrollView>
	<include
        android:id="@+id/errNetLayout"
    	android:layout_below="@id/profittitle"        
   		android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="@color/global_back_black_color" 
	    android:visibility="gone"       
        layout="@layout/network_disabled" />
</RelativeLayout>